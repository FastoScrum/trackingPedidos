@model IEnumerable<TrackingPedidos.Models.Pedidos>

@{
    ViewData["Title"] = "Envíos";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-paper-plane"></i>
        Envíos
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Número Factura</th>
                        <th>Total</th>
                        <th>Lugar Origen</th>
                        <th>Lugar Destino</th>
                        <th>Estado</th>
                        <th>Fecha Envío</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Número Factura</th>
                        <th>Total</th>
                        <th>Cliente</th>
                        <th># Productos</th>
                        <th>Estado</th>
                        <th>Fecha Envío</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InvoiceNumber</td>
                            <td>@item.PedTotal</td>
                            <td>@item.PedLugarOrigen</td>
                            <td>@item.PedLugarDestino</td>
                            <td>@item.FullEstado</td>
                            <td>@item.PedFechaEnvio</td>
                            <td>
                                <a class="btn btn-info btn-xs active" title="Detalles" asp-action="Details" asp-route-id="@item.InvoiceNumber"><i class="fa fa-folder-open" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_modal" />

@section Styles{
    <!-- Page level plugin CSS-->
    <link href="~/lib/datatables/dataTables.bootstrap4.css" rel="stylesheet">
}

@section Scripts{
    <!-- Page level plugin JavaScript-->
    <script src="~/lib/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}