@model IEnumerable<TrackingPedidos.Models.Invoice>

@{
    ViewData["Title"] = "Pedidos";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-truck-moving"></i>
        Pedidos
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Número Factura</th>
                        <th>Total</th>
                        <th># Productos</th>
                        <th>Fecha Registro</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Número Factura</th>
                        <th>Total</th>
                        <th># Productos</th>
                        <th>Fecha Registro</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.invoice_number</td>
                            <td>@item.total</td>
                            <td>@item.invoice_details.Count</td>
                            <td>@item.created_at</td>
                            <td>
                                <a class="btn btn-success btn-xs" title="Enviar" asp-action="Send" asp-route-id="@item.invoice_number"><i class="fa fa-paper-plane" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles{
    <!-- Page level plugin CSS-->
    <link href="~/lib/datatables/dataTables.bootstrap4.css" rel="stylesheet">
}

@section Scripts{
    <!-- Page level plugin JavaScript-->
    <script src="~/lib/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}