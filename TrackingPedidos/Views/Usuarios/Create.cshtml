@model TrackingPedidos.ViewModels.UserVM

@{
    ViewData["Title"] = "Crear usuario";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-users"></i> <strong>Crear usuario</strong>
            </div>
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" minlength="8" maxlength="50" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rol" class="control-label"></label>
                        <select asp-for="Rol" class="form-control">
                            <option value="">Seleccionar</option>
                            <option>Despachador</option>
                            <option>Transportista</option>
                            <option>Distribuidor</option>
                            <option>Mensajero</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" minlength="6" maxlength="30" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" minlength="6" maxlength="30" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" minlength="6" maxlength="30" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <a class="btn btn-md btn-secondary" asp-action="Index">Regresar</a>
                    <button type="submit" class="btn btn-md btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}